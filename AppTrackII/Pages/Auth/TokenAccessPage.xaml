<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppTrackII.ViewModels"
    x:Class="AppTrackII.Pages.Auth.TokenAccessPage"
    Title="">

    <ContentPage.BindingContext>
        <vm:TokenAccessViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">

        <Label Grid.Row="0"
           Text="Registro de dispositivo"
           Style="{StaticResource TitleLabelStyle}"
           HorizontalOptions="Center"
           HorizontalTextAlignment="Center"
           Margin="0,0,0,24" />

        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <Frame WidthRequest="360">
                <VerticalStackLayout Spacing="16">

                    <Label Text="Introduce el token de acceso para continuar."
                           Style="{StaticResource SubtitleLabelStyle}" />

                    <Entry Placeholder="Token de acceso"
                           Text="{Binding Token}" />

                    <Button Text="Continuar"
                            Command="{Binding ContinueCommand}" />

                    <Button Text="Cancelar"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding CancelCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
