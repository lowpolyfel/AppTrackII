<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppTrackII.ViewModels"
    x:Class="AppTrackII.Pages.Auth.LoginPage">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *">
        <Button Grid.Row="0" Text="← Volver" 
                Command="{Binding CancelCommand}" 
                HorizontalOptions="Start" 
                BackgroundColor="Transparent" 
                TextColor="{StaticResource TextSecondaryColor}"
                Margin="10,10,0,0"/>

        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">

            <Label Text="Bienvenido" Style="{StaticResource TitleLabelStyle}" HorizontalOptions="Center"/>

            <Frame WidthRequest="360">
                <VerticalStackLayout Spacing="16">
                    <Label Text="Credenciales de acceso" Style="{StaticResource SubtitleLabelStyle}" />

                    <Entry Placeholder="Usuario" Text="{Binding Usuario}" />
                    <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Password}" />

                    <Button Text="Ingresar al sistema" Command="{Binding LoginCommand}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>