<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppTrackII.ViewModels"
    x:Class="AppTrackII.Pages.Register.RegisterPage">

    <ContentPage.BindingContext>
        <vm:RegisterViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Padding="10,10,24,10">
            <Button Text="←" Command="{Binding CancelCommand}" BackgroundColor="Transparent" TextColor="{StaticResource TextPrimaryColor}" WidthRequest="40"/>
            <Label Grid.Column="1" Text="Nuevo Dispositivo" Style="{StaticResource TitleLabelStyle}" VerticalOptions="Center" HorizontalOptions="End"/>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="24" Padding="24,0,24,24">

                <Frame>
                    <VerticalStackLayout Spacing="16">

                        <VerticalStackLayout Spacing="4">
                            <Label Text="ID FÍSICO (ANDROID ID)" FontSize="10" TextColor="{StaticResource TextSecondaryColor}"/>
                            <Entry Text="{Binding AndroidId}" IsReadOnly="True" TextColor="{StaticResource TextSecondaryColor}" BackgroundColor="#F9FAFB"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="4">
                            <Label Text="UBICACIÓN" FontSize="10" TextColor="{StaticResource TextSecondaryColor}"/>
                            <Picker ItemsSource="{Binding Localidades}" ItemDisplayBinding="{Binding Nombre}" SelectedItem="{Binding LocalidadSeleccionada}" Title="Seleccionar..." />
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="4">
                            <Label Text="NOMBRE ASIGNADO" FontSize="10" TextColor="{StaticResource TextSecondaryColor}"/>
                            <Entry Placeholder="Ej: Tablet Recepción 01" Text="{Binding NombreDispositivo}" />
                        </VerticalStackLayout>

                        <Button Text="Guardar Configuración" Command="{Binding RegisterCommand}" Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>