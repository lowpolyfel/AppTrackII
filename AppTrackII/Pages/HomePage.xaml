<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AppTrackII.ViewModels"
    x:Class="AppTrackII.Pages.HomePage"
    Title="">

    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Grid Grid.Row="0" Padding="0,0,0,24">
            <Label Text="TrackII · Panel móvil"
                   FontSize="13"
                   TextColor="{StaticResource TextSecondaryColor}" />
        </Grid>

        <Grid Grid.Row="1">
            <VerticalStackLayout
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Spacing="24">

                <Image Source="apptrack_logo.png"
                       HeightRequest="120"
                       WidthRequest="120"
                       HorizontalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LogoTappedCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Label Text="AppTrackII"
                       Style="{StaticResource TitleLabelStyle}"
                       HorizontalOptions="Center" />

                <Label Text="Registra dispositivos y escanea piezas desde una interfaz clara y enfocada."
                       Style="{StaticResource SubtitleLabelStyle}"
                       WidthRequest="320"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center" />

                <Frame WidthRequest="340">
                    <VerticalStackLayout Spacing="12">

                        <Button Text="Registrar dispositivo"
                                Command="{Binding GoToRegisterCommand}"
                                IsVisible="{Binding IsRegisterVisible}"
                                BackgroundColor="{StaticResource TextPrimaryColor}" />

                        <Button Text="Iniciar sesión"
                                Command="{Binding GoToLoginCommand}" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>