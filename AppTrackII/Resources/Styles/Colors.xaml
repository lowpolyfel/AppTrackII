<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Fondo general: gris muy claro, casi blanco -->
    <Color x:Key="PageBackgroundColor">#F3F4F6</Color>
    <Color x:Key="BackgroundColor">#F3F4F6</Color>

    <!-- Tarjetas / paneles -->
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>

    <!-- Acento elegante (indigo suave, cero verde) -->
    <Color x:Key="PrimaryColor">#4F46E5</Color>

    <!-- Texto -->
    <Color x:Key="TextPrimaryColor">#111827</Color>
    <Color x:Key="TextColor">#111827</Color>
    <Color x:Key="TextSecondaryColor">#6B7280</Color>
    <Color x:Key="SecondaryTextColor">#6B7280</Color>

    <!-- Bordes y elementos suaves -->
    <Color x:Key="BorderColor">#E5E7EB</Color>

    <!-- Placeholders -->
    <Color x:Key="PlaceholderColor">#9CA3AF</Color>

    <!-- Errores -->
    <Color x:Key="ErrorBackgroundColor">#FEF2F2</Color>
    <Color x:Key="ErrorTextColor">#B91C1C</Color>

    <!-- Compatibilidad con nombres antiguos -->
    <Color x:Key="SecondaryColor">#111827</Color>
</ResourceDictionary>
